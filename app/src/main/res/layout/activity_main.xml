<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barista"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="5dp"
        android:text="Rp 120,000"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaizen Coffee Co"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/salary_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="per day"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:textColor="#000000"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="888 6-7 Thanon Ekkamai, Khwaeng Phra Khanong Nuea, Khet Watthana, Krung Thep Maha Nakhon 10110, Thailand"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/people"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Location Manager"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/manager_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yai Thong-oon"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phone"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+66-955-5695-65"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Clock In"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Clock Out"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/clockin_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/clockout_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background_dark_grey"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background"></LinearLayout>
            <TextView
                android:id="@+id/clock_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clock In"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>